{
  "manifest_version": 3,
  "name": "Highlight Bookmarked Links",
  "version": "1.2",
  "description": "Highlight links on a page that match URLs bookmarked in the browser.",
  "permissions": [
    "bookmarks",
    "activeTab",
    "scripting",
	"storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Highlight Bookmarked Links"
  }
}
